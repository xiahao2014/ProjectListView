<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_height">

    <RelativeLayout
        android:id="@+id/broder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_height"
        android:background="@drawable/rect"
        android:visibility="gone">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/rl_partent"
        android:background="#55000000"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:text="AAAAAAAAAAAAAAAAAAAAAAAAAA"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_partent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_height"
        android:background="@drawable/playlist_tile_normal" android:layout_below="@+id/broder"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true">
        <TextView android:id="@+id/line2" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignWithParentIfMissing="true"
                  android:layout_centerVertical="true"
                  android:textSize="18sp"
                  android:textColor="#000000"
                  android:layout_marginLeft="50dp" android:paddingLeft="9dip"
                  android:text="line2...line2...line2...line2...line2"/>


        <ImageView android:id="@+id/play_indicator"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="12dip"
                   android:layout_marginTop="10dip"
                   android:layout_centerVertical="true"
                   android:src="@mipmap/arrow"/>
    </RelativeLayout>

</RelativeLayout>
